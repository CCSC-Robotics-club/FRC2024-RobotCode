<!-- 5516 -->
<robotConfig>
    <hardware>
        <chassisOnCanivore>1</chassisOnCanivore>
        <frontLeftWheelDriveMotor type="int">3</frontLeftWheelDriveMotor>
        <frontLeftWheelSteerMotor type="int">4</frontLeftWheelSteerMotor>
        <frontLeftWheelSteerMotorReversed type="int">1</frontLeftWheelSteerMotorReversed>
        <frontLeftWheelEncoder type="int">10</frontLeftWheelEncoder>
        <frontLeftWheelSteerEncoderReversed type="int">0</frontLeftWheelSteerEncoderReversed>

        <frontRightWheelDriveMotor type="int">6</frontRightWheelDriveMotor>
        <frontRightWheelSteerMotor type="int">5</frontRightWheelSteerMotor>
        <frontRightWheelSteerMotorReversed type="int">1</frontRightWheelSteerMotorReversed>
        <frontRightWheelEncoder type="int">11</frontRightWheelEncoder>
        <frontRightWheelSteerEncoderReversed type="int">0</frontRightWheelSteerEncoderReversed>

        <backLeftWheelDriveMotor type="int">1</backLeftWheelDriveMotor>
        <backLeftWheelSteerMotor type="int">2</backLeftWheelSteerMotor>
        <backLeftWheelSteerMotorReversed type="int">1</backLeftWheelSteerMotorReversed>
        <backLeftWheelEncoder type="int">9</backLeftWheelEncoder>
        <backLeftWheelSteerEncoderReversed type="int">0</backLeftWheelSteerEncoderReversed>

        <backRightWheelDriveMotor type="int">8</backRightWheelDriveMotor>
        <backRightWheelSteerMotor type="int">7</backRightWheelSteerMotor>
        <backRightWheelSteerMotorReversed type="int">1</backRightWheelSteerMotorReversed>
        <backRightWheelEncoder type="int">12</backRightWheelEncoder>
        <backRightWheelSteerEncoderReversed type="int">0</backRightWheelSteerEncoderReversed>

        <gyroPort type="int">15</gyroPort>

        <!-- the zero position of encoders, to measure this value, turn the wheel to the direct front, and see the value of encoder.getRawSensorReading() -->
        <frontLeftWheelZeroPosition type = "double">0.023</frontLeftWheelZeroPosition>
        <frontRightWheelZeroPosition type = "double">0.325</frontRightWheelZeroPosition>
        <backLeftWheelZeroPosition type = "double">-2.973</backLeftWheelZeroPosition>
        <backRightWheelZeroPosition type = "double">-2.429</backRightWheelZeroPosition>
    </hardware>
    <chassis>
        <wheelGearRatio type="double">8.14</wheelGearRatio>
        <!-- override existing steer wheel PID -->
        <steerWheelErrorTolerance type = "double">1</steerWheelErrorTolerance> <!-- the amount of error to ignore, in degrees -->
        <steerWheelErrorStartDecelerate type = "double">80</steerWheelErrorStartDecelerate> <!-- the amount of error where the motors should try to correct using full motor speed, in degrees -->
        <steerWheelMaximumPower type = "double">0.75</steerWheelMaximumPower> <!-- use this value as the full speed -->
        <steerWheelMinimumPower type = "double">0.01</steerWheelMinimumPower> <!-- this is the minimum amount of motor speed needed to turn the steer, in percentage of the full speed -->
        <steerWheelFeedForwardTime type = "double">0</steerWheelFeedForwardTime>
        <steerCorrectionPowerRateAtZeroWheelSpeed type="double">1</steerCorrectionPowerRateAtZeroWheelSpeed>
        <steerCorrectionPowerFullWheelSpeed type="double">1</steerCorrectionPowerFullWheelSpeed>



        <robotMaximumSpeed type="double">5</robotMaximumSpeed>
        <timeNeededToFullyAccelerate type="double">0.25</timeNeededToFullyAccelerate>
        <robotSpeedActivateSpeedControl type="double">0.1</robotSpeedActivateSpeedControl>
    </chassis>

    <shooter>
        <shooter1Port>13</shooter1Port>
        <shooter2Port>16</shooter2Port>
        <shooter1Reversed>1</shooter1Reversed>
        <shooter2Reversed>1</shooter2Reversed>
    </shooter>

    <intake>
        <intakeMotor1Port>14</intakeMotor1Port>
        <intakeMotor1Reversed>0</intakeMotor1Reversed>
        <intakeMotor2Port>14</intakeMotor2Port>
        <intakeMotor2Reversed>0</intakeMotor2Reversed>
    </intake>

    <arm>
        <armMotorPort>9</armMotorPort>
        <!-- positive should be towards lower point -->
        <armMotorReversed>1</armMotorReversed>
        <armEncoderReversed>1</armEncoderReversed>

        <!-- calibrate by DCEncoderCalibration.java, the reading of: absolute position(radian), when arm is placed vertically -->
        <encoderZeroPositionRadians>2.57</encoderZeroPositionRadians>

        <position-DEFAULT>93</position-DEFAULT>
        <position-INTAKE>93</position-INTAKE>
        <position-SHOOT_NOTE>75</position-SHOOT_NOTE>
        <position-SCORE_AMPLIFIER>1</position-SCORE_AMPLIFIER>

        <!-- software limit -->
        <lowerPositionLimit>0</lowerPositionLimit>
        <upperPositionLimit>95</upperPositionLimit>

        <!-- lookup table -->
        <encoderPosition0>0</encoderPosition0>
        <gravityTorque0>0.04</gravityTorque0>
        <!-- the upper balanced point -->
        <encoderPosition1>20</encoderPosition1>
        <gravityTorque1>0</gravityTorque1>
        <!-- midway between the upper balance point and the lower balance point  -->
        <encoderPosition0>40</encoderPosition0>
        <gravityTorque2>-0.02</gravityTorque2>
        <!-- lower balance point (aka. default position) -->
        <encoderPosition3>70</encoderPosition3>
        <gravityTorque3>-0.06</gravityTorque3>
        <!-- lowest position -->
        <encoderPosition4>90</encoderPosition4>
        <gravityTorque4>-0.01</gravityTorque4>

        <!-- arm PID (Override robotConfig) -->
        <maximumPower>0.7</maximumPower>
        <errorStartDecelerate>35</errorStartDecelerate>
        <minPowerToMove>0.04</minPowerToMove>
        <errorTolerance>1</errorTolerance>
        <feedForwardTime>0.08</feedForwardTime>
        <errorAccumulationProportion>0</errorAccumulationProportion>
        <maxAcceleration>180</maxAcceleration>
        <maxVelocity>150</maxVelocity>
        <inAdvanceTime>0.25</inAdvanceTime>
        <errorToleranceAsInPosition>4</errorToleranceAsInPosition>
    </arm>
</robotConfig>